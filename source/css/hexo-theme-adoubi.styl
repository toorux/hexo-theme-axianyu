.cc-post
  &-title
    font-size 16px
    font-weight 500
  &-url
    font-size 12px
  &-detail
    margin 10px 0
    &-item
      display inline-block
      padding-right 20px
      &-title
        font-size 12px
      &-value
        font-weight 400



@media all and (max-width: 1024px) 
  .header
    width calc(100% - 40px)
    margin 20px 20px 0
  .content
    width calc(100% - 80px)
    margin 20px 40px 0
  .archive
    margin-left: 0px
  .archive-item
    &__link
      &__title
        margin-left 0
  .cc-license
    margin 0 -40px